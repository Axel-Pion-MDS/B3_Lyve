{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ answer.answer }}</td>
            </tr>
            <tr>
                <th>IsCorrect</th>
                <td>{{ answer.isCorrect ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_answer_index') }}">back to list</a>

    <a href="{{ path('app_answer_edit', {'id': answer.id}) }}">edit</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
