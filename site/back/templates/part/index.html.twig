{% extends 'base.html.twig' %}

{% block title %}Part index{% endblock %}

{% block body %}
    <h1>Part index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Title</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for part in parts %}
            <tr>
                <td>{{ part.id }}</td>
                <td>{{ part.content }}</td>
                <td>{{ part.title }}</td>
                <td>{{ part.createdAt ? part.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ part.updatedAt ? part.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_part_show', {'id': part.id}) }}">show</a>
                    <a href="{{ path('app_part_edit', {'id': part.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_part_new') }}">Create new</a>
{% endblock %}
