{% extends 'base.html.twig' %}

{% block title %}Badge{% endblock %}

{% block body %}
    <h1>Badge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ badge.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ badge.picture }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ badge.createdAt ? badge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ badge.updateAt ? badge.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_badge_index') }}">back to list</a>

    <a href="{{ path('app_badge_edit', {'id': badge.id}) }}">edit</a>

    {{ include('badge/_delete_form.html.twig') }}
{% endblock %}
